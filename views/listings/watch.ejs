<% layout('/layouts/boilerplate') %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mt-4">

  <!-- TITLE -->
  <h2 class="fw-bold mb-3"><%= listing.title %></h2>

  <!-- IMAGE + DETAILS -->
  <div class="row g-4">

    <!-- IMAGE -->
    <div class="col-md-8">
      <img 
        src="<%= listing.image.url %>" 
        alt="listing image"
        class="img-fluid rounded-4 shadow-sm w-100 show-img"
      />
    </div>

    <!-- DETAILS CARD -->
    <div class="col-md-4">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">

          <p class="text-muted mb-1">
            Hosted by <strong><%= listing.owner.username %></strong>
          </p>

          <p class="mb-2"><%= listing.description %></p>

          <h4 class="text-success fw-bold mb-3">
            ‚Çπ <%= listing.price %> <span class="fs-6 text-muted">/ night</span>
          </h4>

          <p class="mb-1">
            üìç <%= listing.location %>, <%= listing.country %>
          </p>

          <% if (currUser && currUser.equals(listing.owner._id)) { %>
            <div class="d-flex gap-2 mt-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark w-100">
                Edit
              </a>

              <form 
                method="post" 
                action="/listings/<%= listing._id %>?_method=DELETE"
                class="w-100"
              >
                <button class="btn btn-outline-danger w-100">
                  Delete
                </button>
              </form>
            </div>
          <% } %>

        </div>
      </div>
    </div>
  </div>

  <!-- MAP -->
  <div class="mt-5">
    <h4 class="fw-semibold mb-3">Where you‚Äôll be</h4>
    <div id="map" class="rounded-4 shadow-sm"></div>
  </div>

  <!-- REVIEW FORM -->
  <% if (currUser) { %>
    <div class="mt-5 col-md-8">

      <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body">

          <h5 class="fw-semibold mb-3">Leave a review</h5>

          <form 
            method="post" 
            action="/listings/<%= listing._id %>/reviews"
            class="needs-validation"
            novalidate
          >

            <!-- RATING -->
            <div class="mb-3">
              <label class="form-label">Rating *</label>
              <fieldset class="starability-slot">
                <input type="radio" id="rate1" name="reviews[range]" value="1" required />
                <label for="rate1">1</label>

                <input type="radio" id="rate2" name="reviews[range]" value="2" />
                <label for="rate2">2</label>

                <input type="radio" id="rate3" name="reviews[range]" value="3" />
                <label for="rate3">3</label>

                <input type="radio" id="rate4" name="reviews[range]" value="4" />
                <label for="rate4">4</label>

                <input type="radio" id="rate5" name="reviews[range]" value="5" />
                <label for="rate5">5</label>
              </fieldset>

              <div class="invalid-feedback">
                Please select a rating
              </div>
            </div>

            <!-- COMMENT -->
            <div class="mb-3">
              <label class="form-label">Comment *</label>
              <textarea 
                class="form-control" 
                rows="4" 
                name="reviews[comment]" 
                required
              ></textarea>

              <div class="invalid-feedback">
                Please write a comment
              </div>
            </div>

            <button class="btn btn-dark">
              Submit review
            </button>

          </form>
        </div>
      </div>
    </div>
  <% } %>

  <!-- REVIEWS -->
  <% if (listing.reviews.length > 0) { %>
    <div class="mt-5">
      <h4 class="fw-semibold mb-3">Reviews</h4>

      <div class="row g-3">
        <% for (let review of listing.reviews) { %>

          <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
              <div class="card-body">

                <h6 class="fw-bold mb-1">
                  @<%= review.author.username %>
                </h6>

                <p 
                  class="starability-result mb-2"
                  data-rating="<%= review.range %>"
                ></p>

                <p class="mb-2"><%= review.comment %></p>

                <% if (currUser) { %>
                  <form 
                    method="post" 
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  >
                    <button class="btn btn-sm btn-outline-danger">
                      Delete
                    </button>
                  </form>
                <% } %>

              </div>
            </div>
          </div>

        <% } %>
      </div>
    </div>
  <% } %>

</div>

<script src="/js/map.js"></script>
